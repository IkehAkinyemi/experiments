{
  "manifest_version": 2,
  "name": "Beastify",
  "version": "0.0.1",

  "description": "Adds a browser action to the toolbar. Click the button to choose a beast. The active tab's body content is then replaced with a picture of the chosen beast.",
  "homepage_url": "https://google.com",
  "icons": {
    "48": "icons/beasts-48.png"
  },
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "icons/beast-32.png",
    "default_title": "Beastify",
    "default_popup": "popup/choose_beast.html"
  },
  "web_accessible_resources": [
    "beasts/frog.jpg",
    "beasts/turtle.jpg",
    "beasts/snake.jpg"
  ]
}